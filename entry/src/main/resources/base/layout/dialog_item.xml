<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_content"
    ohos:width="match_parent"
    ohos:background_element="$graphic:top_white_round_bg"
    ohos:orientation="vertical"
    >

    <Text
        ohos:height="50vp"
        ohos:width="match_parent"
        ohos:text="温馨提示"
        ohos:text_alignment="center"
        ohos:text_size="20vp"
        />

    <Text
        ohos:height="150vp"
        ohos:width="match_parent"
        ohos:background_element="white"
        ohos:text="$string:dialog_content"
        ohos:text_alignment="center"
        ohos:text_size="17vp"
        />

    <DirectionalLayout
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:orientation="horizontal"
        ohos:padding="10vp"
        >

        <Button
            ohos:id="$+id:confirm_btn"
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:background_element="$graphic:button_click"
            ohos:text="确定"
            ohos:text_color="#1766fb"
            ohos:text_size="16vp"
            ohos:weight="1"
            ohos:right_margin="5vp"
            />

        <Text
            ohos:height="20vp"
            ohos:width="1vp"
            ohos:background_element="gray"
            ohos:layout_alignment="vertical_center"
            />

        <Button
            ohos:id="$+id:cancel_btn"
            ohos:height="50vp"
            ohos:width="0vp"
            ohos:background_element="$graphic:button_click"
            ohos:text="取消"
            ohos:text_color="#1766fb"
            ohos:text_size="16vp"
            ohos:weight="1"
            ohos:left_margin="5vp"
            />
    </DirectionalLayout>
</DirectionalLayout>